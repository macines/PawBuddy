@page
@model RegisterModel
@section Styles {
    <link rel="stylesheet" href="~/css/registo_login.css" />
}

@{
    ViewData["Title"] = "Register";
}
<div class="row justify-content-center">
    <div class="col-md-6">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="mb-4">Criar conta PawBuddy</h2>
            <div class="info-box mb-4">
                <p class="mb-0">
                    Ao criar uma conta na <strong>PawBuddy</strong>, poderá <strong>adotar animais</strong> e <strong>fazer doações</strong>.
                    Apenas utilizadores com mais de <strong>18 anos</strong> podem registar-se na plataforma.
                </p>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="row">
                <!-- Coluna esquerda -->
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Utilizador.Nome" class="form-control" aria-required="true" placeholder="Nome completo"/>
                        <label asp-for="Input.Utilizador.Nome">Nome</label>
                        <span asp-validation-for="Input.Utilizador.Nome" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Utilizador.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Utilizador.Email">Email</label>
                        <span asp-validation-for="Input.Utilizador.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirmar Password" />
                        <label asp-for="Input.ConfirmPassword">Confirmar Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <!-- Coluna direita -->
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Utilizador.Nif" class="form-control" aria-required="true" placeholder="123456789"/>
                        <label asp-for="Input.Utilizador.Nif">NIF</label>
                        <span asp-validation-for="Input.Utilizador.Nif" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Utilizador.Telemovel" class="form-control" aria-required="true" placeholder="912345678"/>
                        <label asp-for="Input.Utilizador.Telemovel">Telemóvel</label>
                        <span asp-validation-for="Input.Utilizador.Telemovel" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Utilizador.Morada" class="form-control" aria-required="true" placeholder="Rua Exemplo, 123"/>
                        <label asp-for="Input.Utilizador.Morada">Morada</label>
                        <span asp-validation-for="Input.Utilizador.Morada" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Utilizador.CodPostal" class="form-control" aria-required="true" placeholder="XXXX-XXX"/>
                        <label asp-for="Input.Utilizador.CodPostal">Código Postal</label>
                        <span asp-validation-for="Input.Utilizador.CodPostal" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Utilizador.Pais" class="form-control" aria-required="true" placeholder="Portugal"/>
                        <label asp-for="Input.Utilizador.Pais">País</label>
                        <span asp-validation-for="Input.Utilizador.Pais" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Utilizador.DataNascimento" class="form-control" aria-required="true" placeholder="DD/MM/AAAA"/>
                        <label asp-for="Input.Utilizador.DataNascimento">Data de Nascimento</label>
                        <span asp-validation-for="Input.Utilizador.DataNascimento" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
                <div class="mb-3">
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registar</button>
                </div>
            
            <div class="text-center">
                <p>
                    <a class="btn-link-style" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">
                        Já tenho Conta
                    </a>
                </p>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
