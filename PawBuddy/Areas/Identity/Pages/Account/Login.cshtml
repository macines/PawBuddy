@page
@model LoginModel

@section Styles {
    <link rel="stylesheet" href="~/css/registo_login.css" />
}

@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <section>
            <form id="account" method="post">
                <h2 class="mb-4">Aceda à sua conta PawBuddy</h2>
                <div class="info-box mb-4">
                    <p class="mb-0">
                        Inicie sessão para poder <strong>adotar animais</strong> ou <strong>fazer doações</strong> na plataforma.
                    </p>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.UsernameOrEmail" class="form-control" autocomplete="username" aria-required="true" placeholder="Username ou Email" />
                    <label asp-for="Input.UsernameOrEmail">Username ou Email</label>
                    <span asp-validation-for="Input.UsernameOrEmail" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <div class="mb-3">
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Entrar</button>
                </div>

                <div class="text-center">
                    <p>
                        <a class="btn-link-style" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                            Criar Conta
                        </a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
